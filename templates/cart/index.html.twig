{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive shop_cart_table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">&nbsp;</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-subtotal">Total</th>
                                <th class="product-remove">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in cart.products %}
                            <tr>
                                <td class="product-thumbnail"><a href="#"><img src="/uploads/images/product/{{item.product.image}}"
                                            alt="{{item.product.name}}"></a></td>
                                <td class="product-name" data-title="Product"><a href="#">{{item.product.name}}</a></td>
                                <td class="product-price" data-title="Price">{{item.product.price|number_format(0, '', ' ')}} FCFA</td>
                                <td class="product-quantity" data-title="Quantity">
                                    <div class="quantity">
                                        <a href="{{path('delete_cart', {'id' : item.product.id})}}" class="minus">-</a>
                                        <input type="text" name="quantity" value="{{item.quantity}}" title="Qty" class="qty" size="4">
                                        <a href="{{path('add_cart', {'id' : item.product.id})}}" class="plus">+</a>
                                    </div>
                                </td>
                                <td class="product-subtotal" data-title="Total">{{item.productHT|number_format(0, '', ' ')}} FCFA</td>
                                <td class="product-remove" data-title="Remove"><a href="{{path('delete_all_cart', {'id' : item.product.id})}}"><i class="ti-close"></i></a>
                                </td>
                            </tr>                                
                            {% endfor %}

                        </tbody>
                        {# <tfoot>
                            <tr>
                                <th class="product-thumbnail">&nbsp;</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-subtotal">Total</th>
                                <th class="product-remove">Remove</th>
                            </tr>
                        </tfoot> #}
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="medium_divider"></div>
                <div class="divider center_icon"><i class="ti-shopping-cart-full"></i></div>
                <div class="medium_divider"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">


            </div>
            <div class="col-md-6">
                <div class="border p-3 p-md-4">
                    <div class="heading_s1 mb-3">
                        <h6>Cart Totals</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="cart_total_label">Cart Subtotal</td>
                                    <td class="cart_total_amount">{{cart.data.THT|number_format(0, '', ' ')}} FCFA</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Shipping</td>
                                    <td class="cart_total_amount">Free Shipping</td>
                                </tr>
                                <tr>
                                    <td class="cart_total_label">Total</td>
                                    <td class="cart_total_amount"><strong>{{cart.data.TTC|number_format(0, '', ' ')}} FCFA</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <a href="{{path('checkout')}}" class="btn btn-fill-out">Proceed To CheckOut</a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}