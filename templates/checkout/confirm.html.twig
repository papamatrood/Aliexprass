{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="heading_s1">
                    <h4>Your delivery Address</h4>
                    <div class="content">
                        {{data.address|replace({'[SPR]' : '<br>'})|raw}} <br>
                        <a href="{{path('checkout')}}" class="btn btn btn-fill-out">Change Address</a>
                    </div>
                </div>
                <div class="heading_s1">
                    <h4>Your carrier</h4>
                    <div class="content">
                        {{data.carrier|replace({'[SPR]' : '<br>'})|raw}} <br>
                        <a href="{{path('checkout')}}" class="btn btn btn-fill-out">Change Carrier</a>
                    </div>
                </div>
                {% if not (data.moreInformation is empty) %}
                <div class="heading_s1">
                    <h4>Additional information</h4>
                    <div class="form-group mb-0">
                        {{ dump(data.moreInformation) }}
                    </div>
                </div>
                {% endif %}
            </div>

            <div class="col-md-6">
                <div class="order_review">
                    <div class="heading_s1">
                        <h4>Your Orders</h4>
                    </div>
                    <div class="table-responsive order_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cart.products %}
                                <tr>
                                    <td>{{item.product.name}} <span class="product-qty">x {{item.quantity}}</span></td>
                                    <td>{{item.productHT|number_format(0, '', ' ')}} FCFA</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>SubTotal HT</th>
                                    <td class="product-subtotal">{{cart.data.THT|number_format(0, '', ' ')}} FCFA</td>
                                </tr>
                                <tr>
                                    <th>Taxe</th>
                                    <td class="product-subtotal">{{cart.data.TVA|number_format(0, '', ' ')}} FCFA /
                                        ({{cart.data.TAXE}})</td>
                                </tr>
                                <tr>
                                    <th>Total TTC</th>
                                    <td class="product-subtotal">{{cart.data.TTC|number_format(0, '', ' ')}} FCFA</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="payment_method">
                        <div class="heading_s1">
                            <h4>Payment</h4>
                        </div>

                    </div>
                    <a href="#" id="checkout-button" class="btn btn-fill-out btn-block">Payement</a>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}