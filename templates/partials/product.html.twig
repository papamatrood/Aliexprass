<div class="col-lg-3 col-md-4 col-6">
    <div class="product">
        <div class="product_img">
            <a href="">
                <img src="/uploads/images/product/{{product.image}}" alt="{{product.name}}">
            </a>
            <div class="product_action_box">
                <ul class="list_none pr_action_btn">
                    <li class="add-to-cart">
                        <a href="{{path('add_cart', {'id' : product.id})}}"><i class="icon-basket-loaded"></i>Add To Cart</a>
                    </li>
                    <li><a href="" class=""><i class="icon-shuffle"></i></a></li>
                    <li><a href="" class=""><i class="icon-magnifier-add"></i></a></li>
                    <li><a href="#"><i class="icon-heart"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="product_info">
            <h6 class="product_title"><a href="">{{product.name}}</a></h6>
            <div class="product_price">
                <span class="price">{{product.price | number_format(0, '', ' ')}} FCFA</span>
                <del>{{(product.price * 1.18) | number_format(0, '', ' ')}} FCFA</del>
                <div class="on_sale">
                    <span>18% Off</span>
                </div>
            </div>
            <div class="rating_wrap">
                <div class="rating">
                    <div class="product_rate" style="width:80%"></div>
                </div>
                <span class="rating_num">(21)</span>
            </div>
            <div class="pr_desc">
                <p>{{product.description}}</p>
            </div>
            <div class="pr_switch_wrap">
                <div class="product_color_switch">
                    <span class="active" data-color="#87554B"></span>
                    <span data-color="#333333"></span>
                    <span data-color="#DA323F"></span>
                </div>
            </div>
        </div>
    </div>
</div>